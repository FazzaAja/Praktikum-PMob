<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:paddingTop="15dp"
        android:paddingBottom="12dp"
        android:text="Twitter"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:background="#00acee"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/button_watch_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/palestina"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Palestine"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Palestina adalah wilayah bersejarah di Timur Tengah, sebuah tanah yang kaya akan makna religius bagi tiga agama Abrahamikâ€”Islam, Kristen, dan Yahudi. Wilayah ini telah menjadi pusat konflik geopolitik yang berlarut-larut, terutama antara rakyat Palestina dan Israel, yang berakar dari isu-isu historis, perbatasan, dan klaim atas tanah. Meskipun perjuangan kemerdekaan terus berlanjut, semangat dan identitas budaya Palestina tetap kuat, tercermin dalam seni, musik, dan ketahanan masyarakatnya. Kondisi politik yang kompleks dan kemanusiaan yang sulit di Jalur Gaza dan Tepi Barat terus menjadi perhatian dunia internasional."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86 like"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like"
                    android:backgroundTint="@color/blue"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Retweet"
                    android:backgroundTint="@color/blue"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bahlil" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahlil Tolol"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menteri Bahlil Lahadalia menepis keraguan terhadap penggunaan etanol sebagai campuran BBM, merujuk pada keberhasilan negara-negara maju seperti Brasil dan Amerika Serikat. Menurutnya, program E10 (campuran etanol 10%) bertujuan mengurangi impor BBM, menciptakan lapangan kerja, dan mendorong ekonomi lokal dengan memanfaatkan sumber daya alam seperti singkong dan tebu. Ia juga menegaskan bahwa rencana ini sesuai dengan visi Presiden Prabowo untuk membangun industri etanol di Merauke, Papua Selatan, yang ditargetkan beroperasi pada 2027."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160 like"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/blue"/>
                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:text="Retweet" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sekolah"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Murid Tolol"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insiden di SMAN 1 Cimarga, Lebak, Banten, menjadi sorotan publik setelah seorang kepala sekolah bernama Dini Fitri menampar siswanya, Indra, yang kedapatan merokok di lingkungan sekolah. Tindakan ini berujung pada laporan polisi dari orang tua siswa dan keputusan Gubernur Banten untuk menonaktifkan Dini dari jabatannya. Namun, polemik ini akhirnya mereda setelah kedua belah pihak dipertemukan dan saling memaafkan, yang berujung pada pencabutan status nonaktif kepala sekolah. Meskipun siswa tersebut juga diberi sanksi berupa teguran, kasus ini memicu perdebatan luas tentang batasan tindakan guru dalam menegakkan disiplin dan pentingnya pendekatan tanpa kekerasan."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41 like"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like"
                    android:backgroundTint="@color/blue"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:text="Retweet" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_watch_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="EXPLORE"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>